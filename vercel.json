{
  "rewrites": [
    { "source": "/api/payment", "destination": "/api/payment.js" },
    { "source": "/api/payment/status", "destination": "/api/payment/status/status.php.js" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "routes": [
    {
      "src": "/public/.*",
      "dest": "/public/index.html",
      "methods": ["GET"]
    }
  ]
}
