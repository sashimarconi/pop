{
  "rewrites": [
    { "source": "/api/payment/payment.php", "destination": "/api/payment/payment" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "routes": [
    {
      "src": "/public/.*",
      "dest": "/public/index.html",
      "methods": ["GET"]
    }
  ],
  "buildCommand": "npm install",
  "functions": {
    "api/payment/payment.php.js": {
      "maxDuration": 10
    },
    "api/payment/status/status.php.js": {
      "maxDuration": 10
    }
  }
}
