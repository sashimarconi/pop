{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    { "source": "/api/payment/payment.php", "destination": "/api/payment-new" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "routes": [
    {
      "src": "/public/.*",
      "dest": "/public/index.html",
      "methods": ["GET"]
    }
  ]
}
